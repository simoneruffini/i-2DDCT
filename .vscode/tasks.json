{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "check format",
      "type": "shell",
      "command": "${workspaceFolder}/scripts/vsg/vhdl_linter.sh ${file}",
      "group": "none",
      "presentation": {
        "reveal": "always",
        "panel": "new"
      }
    },
    {
      "label": "fix format",
      "type": "shell",
      "command": "${workspaceFolder}/scripts/vsg/vhdl_linter.sh ${file} fix",
      "group": "none",
      "presentation": {
        "reveal": "always",
        "panel": "new"
      }
    }
  ]
}